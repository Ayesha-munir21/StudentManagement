@model StudentManagement.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2 class="text-center mb-4 text-danger">Delete Student</h2>

<div class="row justify-content-center">
    <div class="col-md-6 border p-4 rounded bg-light shadow-sm">
        <h5 class="text-danger mb-4">Are you sure you want to delete this student?</h5>

        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Department</dt>
            <dd class="col-sm-8">@Model.Department</dd>

            <dt class="col-sm-4">Enrolled Date</dt>
            <dd class="col-sm-8">@Model.EnrolledDate.ToShortDateString()</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <input type="submit" value="Yes, Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
