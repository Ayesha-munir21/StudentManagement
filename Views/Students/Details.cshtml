@model StudentManagement.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h2 class="text-center mb-4">Student Details</h2>

<div class="row justify-content-center">
    <div class="col-md-6 border p-4 rounded bg-light shadow-sm">
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Department</dt>
            <dd class="col-sm-8">@Model.Department</dd>

            <dt class="col-sm-4">Enrolled Date</dt>
            <dd class="col-sm-8">@Model.EnrolledDate.ToShortDateString()</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>
</div>
